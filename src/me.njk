---
layout: layouts/base.njk
---
<main>
  <div>
    <a class='home-link' href='/'>
      <h1>Ben Smith</h1>
    </a>
    <ul>
      {% for link in links.external %}
        <li>
          <a
            href='{{ link.url }}'
            class='linktree-link'
            rel='noreferrer'
            target='_blank'
          >
            <span class='icon'>{{ link.icon }}</span>
            <span>{{ link.title }}</span>
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</main>

<style>
  main {
    display: grid;
    place-items: center;
    text-align: center;
    min-height: 100vh;
  }

  main *:focus-visible {
    outline-offset: 2px;
    outline: 1px solid var(--laserwave-hotPink);
  }

  .home-link {
    border-radius: 8px;
    color: var(--laserwave-hotPink);
    display: inline-block;
  }
  .home-link:hover,
  .home-link:focus-visible {
    text-decoration: underline;
  }

  .linktree-link {
    border-radius: 0.4em;
    color: var(--laserwave-hotPink);
    display: inline-flex;
    align-items: center;
    padding: 0.5rem;
  }
  .linktree-link:hover,
  .linktree-link:focus-visible {
    background-color: var(--laserwave-hotPink);
    color: white;
    outline: none;
    text-decoration: none;
  }
  .linktree-link > span {
    margin-inline: 0.5rem;
  }

  .icon {
    width: 1.75rem;
    height: 1.75rem;
  }

  .external-icon {
    width: 1rem;
    height: 1rem;
  }
</style>
