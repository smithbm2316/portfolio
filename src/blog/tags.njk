---
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /blog/tags/{{ tag }}/
---
<h1>Tagged “{{ tag }}”</h1>

<ol>
{% set taglist = collections[ tag ] %}
{% for post in taglist | reverse %}
  {% if post.data.draft != true %}
    <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
  {% endif %}
{% endfor %}
</ol>

